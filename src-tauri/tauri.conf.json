{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "VMagic",
    "version": "0.1.0",
    "identifier": "com.vmagic.fpsconverter",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "VMagic - FPS Converter",
                "width": 1200,
                "height": 850,
                "minWidth": 900,
                "minHeight": 650,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "dragDropEnabled": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}